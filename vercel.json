{
  "crons": [
    {
      "path": "/api/cron/sitemap-update",
      "schedule": "0 2 * * 0"
    }
  ],
  "functions": {
    "app/sitemap-[category].xml/route.ts": {
      "maxDuration": 10
    },
    "app/api/cron/sitemap-update/route.ts": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/sitemap-(.*).xml",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=3600, s-maxage=3600"
        }
      ]
    }
  ]
}
